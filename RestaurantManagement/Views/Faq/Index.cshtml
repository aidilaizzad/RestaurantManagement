@{
    ViewData["Title"] = "FAQ";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <!-- FAQ Section Header -->
        <div class="text-center mb-5 fade-in">
            <h1 class="display-4">
                <span class="text-border">Frequently Asked Questions</span>
            </h1>
        </div>

        <div class="row fade-in">
            <div class="col-11">
                <ul class="list-unstyled">
                    <li class="faq-item mb-4" id="faq1">
                        <div class="faq-border">
                            <strong class="h5 text-white">What type of food do you serve?</strong>
                            <p class="text-black">We offer a variety of cuisines, including Italian, Asian, and American dishes.</p>
                        </div>
                    </li>
                    <li class="faq-item mb-4" id="faq2">
                        <div class="faq-border">
                            <strong class="h5 text-white">Do you offer delivery?</strong>
                            <p class="text-black">Yes, we offer delivery services within a 5-mile radius of our location.</p>
                        </div>
                    </li>
                    <li class="faq-item mb-4" id="faq3">
                        <div class="faq-border">
                            <strong class="h5 text-white">Do you accept reservations?</strong>
                            <p class="text-black">Yes, you can make a reservation online or by calling us directly.</p>
                        </div>
                    </li>
                    <li class="faq-item mb-4" id="faq4">
                        <div class="faq-border">
                            <strong class="h5 text-white">What are your opening hours?</strong>
                            <p class="text-black">We are open from 11 AM to 11 PM, seven days a week.</p>
                        </div>
                    </li>
                    <li class="faq-item mb-4" id="faq5">
                        <div class="faq-border">
                            <strong class="h5 text-white">Do you cater for special events?</strong>
                            <p class="text-black">Yes, we offer catering services for weddings, parties, and corporate events. Contact us for more details.</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>



    <script>
        // Add fade-in effect when elements are visible in the viewport
        const elements = document.querySelectorAll('.fade-in');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        });
        elements.forEach(el => observer.observe(el));
    </script>
</body>
</html>
