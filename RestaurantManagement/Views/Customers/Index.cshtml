@model IEnumerable<RestaurantManagement.Models.Customer>

<div class="container my-5">
    <!-- Our Menu Section -->
    <h2 class="display-4 text-center mb-5">
        <span class="text-border">Customer List</span>
    </h2>

    <!-- Table Styling -->
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Customer Name</th>
                <th>Date</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr class="table-row">
                    <td>@customer.CustomerName</td>
                    <td>@customer.Date.ToShortDateString()</td>
                    <td>@customer.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-warning btn-sm transition-button">Edit</a>
                        <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-danger btn-sm ml-2 transition-button">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add New Customer Button -->
    <div class="text-center">
        <a asp-action="Create" class="btn btn-success btn-lg shadow transition-button">Add New Customer</a>
    </div>
</div>

<!-- Additional Styles for Transitions -->
<style>
    /* Transition for table rows */
    .table-row {
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .table-row:hover {
        background-color: #f5f5f5; /* Light gray background on hover */
        transform: scale(1.02); /* Slightly scale up the row */
    }

    /* Transition for buttons */
    .transition-button {
        transition: background-color 0.3s ease, box-shadow 0.3s ease, transform 0.2s ease;
    }

    .transition-button:hover {
        background-color: #007bff !important; /* Change to primary blue on hover */
        color: white !important; /* Ensure text stays readable */
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2); /* Add a shadow */
        transform: scale(1.05); /* Slightly scale up the button */
    }
</style>
