@{
    ViewData["Title"] = "About Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <!-- Header Section -->
        <div class="text-center mb-5 fade-in">
            <h1 class="display-4">
                <span class="text-border">About Us</span>
            </h1>
            <p class="lead Welcome-text">
                <span class="text-border">Welcome to our restaurant! We offer a wide range of delicious meals. Our restaurant provides a cozy and inviting atmosphere for you to enjoy with your family and friends.</span>
            </p>
        </div>

        <!-- Story Section -->
        <div class="row align-items-center mb-5 fade-in">
            <div class="col-md-6">
                <h2 class="fw-bold">Our Journey</h2>
                <p class="lead Welcome-text">
                    <span class="text-border">Restaurant Management System was built with a vision to make restaurant
                    operations smooth and effective. Our platform simplifies table reservations, menu orders, and
                        customer management for enhanced experiences.
                    </span>
                </p>
            </div>
            <div class="col-md-6">
                <img src="/images/resma.jpg" alt="Restaurant Management" class="img-fluid rounded shadow hover-card">
            </div>
        </div>

        <!-- Features Section -->
        <div class="text-center mb-5 fade-in">
            <h2 class="fw-bold">
                <span class="text-border">Why Choose Us</span>
            </h2>
            <p class="lead text-muted">
                We bring unmatched efficiency and innovation to restaurant management.
            </p>
        </div>

        <div class="row">
            <!-- Card 1 -->
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 rounded">
                    <div class="card-body text-center">
                        <i class="bi bi-laptop fs-1 text-primary"></i>
                        <h5 class="card-title mt-3">User-Friendly Design</h5>
                        <p class="card-text">Our platform is intuitive and easy to use for everyone.</p>
                    </div>
                </div>
            </div>

            <!-- Card 2 -->
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 rounded">
                    <div class="card-body text-center">
                        <i class="bi bi-speedometer2 fs-1 text-primary"></i>
                        <h5 class="card-title mt-3">Seamless Efficiency</h5>
                        <p class="card-text">Save time by automating your restaurant processes.</p>
                    </div>
                </div>
            </div>

            <!-- Card 3 -->
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0 rounded">
                    <div class="card-body text-center">
                        <i class="bi bi-graph-up-arrow fs-1 text-primary"></i>
                        <h5 class="card-title mt-3">Data Insights</h5>
                        <p class="card-text">Make informed decisions with powerful analytics.</p>
                    </div>
                </div>
            </div>
        </div>


    <script>
        // Add fade-in effect when elements are visible in the viewport
        const elements = document.querySelectorAll('.fade-in');
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                }
            });
        });
        elements.forEach(el => observer.observe(el));
    </script>
</body>
</html>
