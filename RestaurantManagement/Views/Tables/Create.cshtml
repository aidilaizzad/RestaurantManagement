@model RestaurantManagement.Models.Table

<div class="container my-5">
    <h2 class="text-center mb-4">Create New Table</h2>

    <form asp-action="Create" method="post" class="shadow p-4 bg-light rounded">
        <!-- Table Number -->
        <div class="form-group mb-3">
            <label asp-for="TableNumber" class="form-label fw-bold"></label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>

        <!-- Table Capacity -->
        <div class="form-group mb-3">
            <label asp-for="TableCapacity" class="form-label fw-bold"></label>
            <input asp-for="TableCapacity" class="form-control" />
            <span asp-validation-for="TableCapacity" class="text-danger"></span>
        </div>

        <!-- Action Buttons -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary me-2">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

