@model RestaurantManagement.Models.Table

<div class="container my-5">
    <h2 class="text-center mb-4">Edit Table</h2>

    <form asp-action="Edit" method="post" class="shadow p-4 bg-light rounded">
        <input type="hidden" asp-for="TableID" /> <!-- Hidden field to store TableID -->
        <!-- Table Number -->
        <div class="form-group mb-3">
            <label asp-for="TableNumber" class="form-label"></label>
            <input asp-for="TableNumber" class="form-control" />
            <span asp-validation-for="TableNumber" class="text-danger"></span>
        </div>

        <!-- Table Capacity -->
        <div class="form-group mb-3">
            <label asp-for="TableCapacity" class="form-label"></label>
            <input asp-for="TableCapacity" class="form-control" />
            <span asp-validation-for="TableCapacity" class="text-danger"></span>
        </div>

        <!-- Buttons -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary me-2">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
