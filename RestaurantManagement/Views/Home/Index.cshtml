@{
    ViewData["Title"] = "Home Page";
}

<div class="hero text-center text-white my-5">
    <h1 class="display-4 welcome-text">
        <span class="text-border">WELCOME TO THE RESTAURANT MANAGEMENT SYSTEM</span>
    </h1>
    <p class="lead streamline-text">
        <span class="text-border">Streamline your restaurant operations with our efficient and user-friendly platform.</span>
    </p>
</div>

<div class="container my-5">
    <!-- Our Menu Section -->
    <h2 class="display-4 text-center mb-5">
        <span class="text-border">OUR MENU</span>
    </h2>
    <div class="row">
        <!-- Menu Item 1 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/pank.jpg" class="card-img-top" alt="Dish 1">
                <div class="card-body text-center">
                    <h5 class="card-title">PANCAKE</h5>
                    <p class="card-text">RM10.50</p>
                    <p class="card-text">CHOOSE TOPPING</p>
                    <p class="card-text">CHOCOLATE/BLUEBERRY/HONEY</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 2 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/buy.jpg" class="card-img-top" alt="Dish 2">
                <div class="card-body text-center">
                    <h5 class="card-title">BURGER</h5>
                    <p class="card-text">RM11.49</p>
                    <p class="card-text">REGULAR</p>
                    <p class="card-text">BEEF / CHICKEN</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 3 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/cc.jpg" class="card-img-top" alt="Dish 3">
                <div class="card-body text-center">
                    <h5 class="card-title">CHICKEN CHOP</h5>
                    <p class="card-text">RM10.99</p>
                    <p class="card-text">REGULAR</p>
                    <p class="card-text">SPECIAL DISH</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 4 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/chicken.jpg" class="card-img-top" alt="Dish 4">
                <div class="card-body text-center">
                    <h5 class="card-title">CHICKEN WINGS</h5>
                    <p class="card-text">RM8.99</p>
                    <p class="card-text">9 PC CHOOSE FLAVOR</p>
                    <p class="card-text">ORI / SPICY / KOREAN</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 5 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/pizza.jpg" class="card-img-top" alt="Dish 5">
                <div class="card-body text-center">
                    <h5 class="card-title">PIZZA</h5>
                    <p class="card-text">RM15.99</p>
                    <p class="card-text">REGULAR</p>
                    <p class="card-text">CHEESE / HAWAIIAN / PEPPERONI</p>
                </div>
            </div>
        </div>

        <!-- Menu Item 6 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/images/spag.jpg" class="card-img-top" alt="Dish 6">
                <div class="card-body text-center">
                    <h5 class="card-title">SPAGHETTI</h5>
                    <p class="card-text">RM12.00</p>
                    <p class="card-text">REGULAR</p>
                    <p class="card-text">BOLOGNESE / CARBONARA / AGLIO OLIO</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Drinks Section -->
    <h2 class="display-4 text-center mt-5">
        <span class="text-border">DRINKS</span>
    </h2>
    <div class="row">
        <!-- Drink Item 1 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">FRESH ORANGE JUICE</h5>
                    <p class="card-text">RM4.00</p>
