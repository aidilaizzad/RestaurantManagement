        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">ICED COFFEE</h5>
                    <p class="card-text">RM4.00</p>
                </div>
            </div>
        </div>

        <!-- Drink Item 3 -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">LEMONADE</h5>
                    <p class="card-text">RM4.00</p>
                </div>
            </div>
        </div>
