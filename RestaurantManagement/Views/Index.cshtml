@model IEnumerable<RestaurantManagement.Models.Table>

<div class="container my-5">
    <h2 class="text-center mb-4">Table List</h2>

    <!-- Table Styling -->
    <table class="table table-striped table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Table Number</th>
                <th>Table Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var table in Model)
            {
                <tr>
                    <td>@table.TableNumber</td>
                    <td>@table.TableCapacity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@table.TableID" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@table.TableID" class="btn btn-danger btn-sm ml-2">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Add New Table Button -->
    <div class="text-center">
        <a asp-action="Create" class="btn btn-success btn-lg shadow">Add New Table</a>
    </div>
</div>
